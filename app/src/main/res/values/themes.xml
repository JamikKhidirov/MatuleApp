<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Matule" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Полное отключение ActionBar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="Theme.Matule.ScplashScreen" parent="Theme.SplashScreen">

        <item name="isMaterialTheme">false</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_transparent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="postSplashScreenTheme">@style/Theme.Matule</item>
        <item name="windowActionBar">false</item>
        <item name="windowSplashScreenBackground">#2074F2</item>
        <item name="windowSplashScreenAnimationDuration">400</item>

    </style>
</resources>